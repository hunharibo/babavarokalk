        "target": "es5",
        "module": "commonjs",
        "outDir": "bin",
        "removeComments": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "lib": ["dom", "es5", "es2015.promise"]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}